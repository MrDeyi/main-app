@Library('service-bridge-jenkins-shared-library') _

pipeline {

    environment {
        BRANCH = 'main'
        CREDENTIALS_ID = 'github-security-passcode'
        REPO_URL = 'https://github.com/MrDeyi/main-app.git'
    }


    agent any
    tools {
        maven 'Maven:3.9.1'
    }

    stages {
        stage("Clean Up") {
            steps {
               deleteDir()
            }
        }

        stage("Clone Repo") {
            steps {
              cloneRepo(BRANCH,CREDENTIALS_ID,REPO_URL)
             }
        }

        stage("Build and Run App") {
            steps {
               dir('Main_app'){
                 buildProject()
                 sh 'nohup java -jar target/*.jar &'
                 sleep(time: 5, unit: 'SECONDS') // Give time for app to start
               }
            }
        }

        stage("Trigger Test Pipeline") {
            steps {
             dir('Main_app'){
                build job: 'test-app-pipeline', wait: true
               }
            }
        }

        stage("Stop App") {
            steps {
              dir('Main_app'){
              sh "pkill -f 'java -jar'"
              }
            }
        }
    }
}
