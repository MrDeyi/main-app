@Library('service-bridge-jenkins-shared-library') _

pipeline {
    agent any

    environment {
        BRANCH = 'main'
        CREDENTIALS_ID = 'github-security-passcode'
        REPO_URL = 'https://github.com/MrDeyi/main-app.git'
    }

    tools {
        maven 'Maven:3.9.1'
    }

    stages {
        stage("Clean Up") {
            steps {
                deleteDir()
            }
        }

        stage("Clone Repo") {
            steps {
                cloneRepo(BRANCH, CREDENTIALS_ID, REPO_URL)
            }
        }

        stage("Trigger Test Pipeline") {
            steps {
                dir('Main_app') {
                    sh 'mvn -Dtest=CucumberTestRunner test'
                }
            }
        }
    }

    post {
        always {
            // Archive the HTML and JSON reports directly from the target directory
            archiveArtifacts artifacts: 'target/*.{html,json}', fingerprint: true

            // Publish the Cucumber report
            cucumberReport()
        }
    }
}

def cucumberReport() {
    // Publish the Cucumber report
    cucumber(
        fileIncludePattern: '**/cucumber.json', // Pattern to find the JSON report
        jsonReportDir: 'target' // Specify that the JSON report is in the target directory
    )
}
